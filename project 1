  { name: "Apple Vision Pro", price: 300000, emoji: "🕶️" },
  { name: "Apple TV 4K", price: 15900, emoji: "📺" },
  { name: "HomePod", price: 32900, emoji: "🔊" }
];

export default function SpendAmbaniMoney() {
  const initialNetWorth = 1000000000000;
  const [netWorth, setNetWorth] = useState(initialNetWorth);
  const [purchases, setPurchases] = useState({});

  const buyItem = (item) => {
    if (netWorth >= item.price) {
      setNetWorth(netWorth - item.price);
      setPurchases({
        ...purchases,
        [item.name]: (purchases[item.name] || 0) + 1,
      });
    }
  };

  return (
    <div className="p-4 max-w-5xl mx-auto bg-white min-h-screen text-gray-900 transition-colors">
      <h1 className="text-4xl font-bold text-center mb-6">
        Spend Mukesh Ambani's Money 💸
      </h1>
      <h2 className="text-2xl text-center mb-6">
        Net Worth: ₹{netWorth.toLocaleString()}
      </h2>
      <div className="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
        {items.map((item) => (
          <motion.div
            key={item.name}
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.3 }}
          >
            <Card>
              <CardContent className="flex flex-col items-center justify-center p-4">
                <div className="text-5xl mb-2">{item.emoji}</div>
                <h3 className="text-xl font-semibold mb-1">{item.name}</h3>
                <p className="mb-2">Price: ₹{item.price.toLocaleString()}</p>
                <Button onClick={() => buyItem(item)}>Buy</Button>
                {purchases[item.name] && (
                  <p className="mt-2">Bought: {purchases[item.name]}</p>
                )}
              </CardContent>
            </Card>
          </motion.div>
        ))}
      </div>
    </div>
  );
}
